<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/burger.png" alt="Eat-Da-Burger App">
	        <h1>Eat-Da-Burger App</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
							<p class="burgerType">{{this.burger_name}}</p>
                <form action="api/burgers/{{this.id}}?_method=PUT" method="POST" class="dev">
              	  <input type="hidden" name="devoured" value="true">
                  <button class="btnDevour" type="submit">Devour it</button>
                </form>
            </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>
 				<ul>
        	{{#each burgers}} 
						{{#if this.devoured}}
          		<li>
            		<p class="burgerType">{{this.burger_name}}</p>
          		</li>
        		{{/if}} 
					{{/each}}
        </ul>
			
	    </div>

  	</div>

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<div class="form-group">
        <form method="POST" action="api/burgers" class="addOne text-center">
          <textarea id="textArea" type="text" name="burger_name" rows="2" cols="40"></textarea>
          <button id="btnCreate" type="submit">Create!</button>
        </form>
      </div>
	
  	</div>

</div>